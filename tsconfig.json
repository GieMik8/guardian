{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "build/dist",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "noResolve": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "paths": {
      "~src/*": ["*"],
      "~style/*": ["style/*"],
      "~containers/*": ["containers/*"],
      "~environment/*": ["environment/*"],
      "~helpers/*": ["helpers/*"],
      "~plugins/*": ["plugins/*"],
      "~store/*": ["store/*"],
      "~types": ["types"],
      "~services/*": ["services/*"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ],
  "types": [
    "typePatches"
  ],
  "typeAcquisition": {
    "enable": false
  }
}
